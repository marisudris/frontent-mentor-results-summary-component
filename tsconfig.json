{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2015",
        "lib": ["ES2017", "DOM"],
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["script.ts"],
    "exclude": ["node_modules"]
}
